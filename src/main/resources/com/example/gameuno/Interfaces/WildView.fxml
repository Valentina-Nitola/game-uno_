<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.example.gameuno.controller.WildController"
            prefHeight="396.0" prefWidth="503.0">

    <children>
        <VBox alignment="CENTER" layoutX="66.0" layoutY="54.0" prefHeight="200.0" prefWidth="289.0">
            <children>
                <Label>
                    <graphic>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/comodin.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Label>

                <Label text="Selecciona un color">
                    <VBox.margin>
                        <Insets top="20.0" />
                    </VBox.margin>
                </Label>

                <HBox spacing="10">
                    <children>
                        <Button fx:id="btnRed" onAction="#seleccionarRojo" mnemonicParsing="false"
                                prefHeight="77.0" prefWidth="77.0" style="-fx-background-color: transparent;">
                            <graphic>
                                <ImageView fitHeight="77.0" fitWidth="77.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/red.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>

                        <Button fx:id="btnGreen" onAction="#seleccionarVerde" mnemonicParsing="false"
                                prefHeight="77.0" prefWidth="77.0" style="-fx-background-color: transparent;">
                            <graphic>
                                <ImageView fitHeight="77.0" fitWidth="77.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/green.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>

                        <Button fx:id="btnBlue" onAction="#seleccionarAzul" mnemonicParsing="false"
                                prefHeight="77.0" prefWidth="77.0" style="-fx-background-color: transparent;">
                            <graphic>
                                <ImageView fitHeight="77.0" fitWidth="77.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/blue.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>

                        <Button fx:id="btnYellow" onAction="#seleccionarAmarillo" mnemonicParsing="false"
                                prefHeight="77.0" prefWidth="77.0" style="-fx-background-color: transparent;">
                            <graphic>
                                <ImageView fitHeight="77.0" fitWidth="77.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/yellow.png" />
                                    </image>
                                </ImageView>
                            </graphic>
                        </Button>
                    </children>

                    <VBox.margin>
                        <Insets top="30.0" />
                    </VBox.margin>
                </HBox>
            </children>
        </VBox>
    </children>
</AnchorPane>

