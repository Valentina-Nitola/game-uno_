<AnchorPane prefHeight="600" prefWidth="750.0" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.gameuno.controller.JuegoController">
    <ImageView fitHeight="600.0" fitWidth="750.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
        <image>
            <Image url="@../img/fondo3.png" />
        </image>
    </ImageView>

    <VBox id="Ciontenedor del juego" fx:id="contenedorJuego" alignment="CENTER" prefHeight="560.0" prefWidth="748.0" spacing="20" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
        <VBox alignment="CENTER" prefWidth="580.0" spacing="10">
            <children>
                <ScrollPane hbarPolicy="NEVER" hmax="0.5" opacity="0.9" prefHeight="200.0" prefWidth="200.0" rotate="180.0" style="-fx-background-color: transparent;" vbarPolicy="NEVER" vmax="0.5">
                    <content>
                        <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="120.0" prefWidth="1654.0" style="-fx-background-color: transparent;">
                            <children>
                                <ImageView fx:id="CpuMesa" fitHeight="73.0" fitWidth="855.0" layoutX="-37.0" layoutY="12.0" nodeOrientation="INHERIT" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/barra.png" />
                                    </image>
                                </ImageView>
                                <HBox fx:id="contenedorManoCpu" alignment="CENTER" spacing="10" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="5.0" />
                            </children>
                        </AnchorPane>
                    </content>
                    <VBox.margin>
                        <Insets left="10.0" right="10.0" />
                    </VBox.margin>
                </ScrollPane>
                <Label style="-fx-font-size: 16;" text="CPU" textFill="WHITE" />
            </children>
        </VBox>
          <Label fx:id="CartaMesa" style="-fx-font-size: 16;" text="Carta en mesa:" textFill="WHITE">
         <font>
            <Font size="20.0" />
         </font></Label>

        <VBox alignment="CENTER" prefHeight="211.0" prefWidth="632.0" spacing="10">
            <children>
                <!-- ✅ Aquí agregamos la etiqueta de turno -->
                <Label fx:id="lblJugadorActual" ellipsisString="" prefHeight="40.0" prefWidth="88.0" style="-fx-font-size: 16; -fx-text-fill: white;" text="Turno actual" />

                <HBox prefHeight="176.0" prefWidth="508.0">
                    <children>
                        <VBox prefHeight="200.0" prefWidth="100.0">
                            <children>
                                <Button prefHeight="96.0" prefWidth="96.0" style="-fx-background-color: transparent;">
                                    <graphic>
                                        <ImageView fitHeight="96.0" fitWidth="96.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../img/on.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                                <Button prefHeight="96.0" prefWidth="96.0" style="-fx-background-color: transparent;">
                                    <graphic>
                                        <ImageView fitHeight="96.0" fitWidth="96.0" pickOnBounds="true" preserveRatio="true">
                                            <image>
                                                <Image url="@../img/ayuda.png" />
                                            </image>
                                        </ImageView>
                                    </graphic>
                                </Button>
                            </children>
                            <HBox.margin>
                                <Insets left="110.0" />
                            </HBox.margin>
                        </VBox>
                          <ImageView fitHeight="202.0" fitWidth="216.0" pickOnBounds="true" preserveRatio="true" rotate="-11.3">
                              <image>
                                  <Image url="@../img/deck_of_cards.png" />
                              </image>
                          </ImageView>
                  <StackPane prefHeight="150.0" prefWidth="200.0">
                     <children>
                        <ImageView fitHeight="162.0" fitWidth="118.0" pickOnBounds="true" preserveRatio="true" rotate="-9.5">
                           <image>
                              <Image url="@../img/card_uno.png" />
                           </image>
                           <StackPane.margin>
                              <Insets right="60.0" />
                           </StackPane.margin>
                        </ImageView>
                                <ImageView fx:id="descarte" fitHeight="171.0" fitWidth="120.0" pickOnBounds="true" preserveRatio="true" rotate="6.0">
                           <image>
                              <Image url="@../img/reserve_blue.png" />
                           </image>
                           <StackPane.margin>
                              <Insets right="32.0" top="5.0" />
                           </StackPane.margin>
                        </ImageView>
                     </children>
                  </StackPane>

                        <Button fx:id="UnoButton" onAction="#On_Push_Uno" prefHeight="96.0" prefWidth="96.0" style="-fx-background-color: transparent;">
                            <HBox.margin>
                                <Insets top="50.0" />
                            </HBox.margin>
                     <graphic>
                                <ImageView fitHeight="96.0" fitWidth="96.0" pickOnBounds="true" preserveRatio="true">
                                    <image>
                                        <Image url="@../img/uno.png" />
                                    </image>
                                </ImageView>
                     </graphic>
                        </Button>
                    </children>
                </HBox>

                <Button onAction="#tomarCartaDelMazo" prefHeight="65.0" prefWidth="202.0" style="-fx-background-color: transparent;">
                    <graphic>
                        <ImageView fitHeight="150.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                            <image>
                                <Image url="@../img/tomacarta.png" />
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </children>
        </VBox>

        <VBox alignment="CENTER" spacing="10">
            <Label fx:id="nicknameLabel" style="-fx-font-size: 16;" text="Tu mano:" textFill="WHITE" />
            <ScrollPane prefHeight="200.0" prefWidth="200.0" style="-fx-background-color: transparent;">
                <content>
                    <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="107.0" prefWidth="1645.0" style="-fx-background-color: transparent;">
                        <children>
                            <ImageView fx:id="MesaMazo" fitHeight="107.0" fitWidth="1645.0" pickOnBounds="true" preserveRatio="true">
                                <image>
                                    <Image url="@../img/barra.png" />
                                </image>
                            </ImageView>
                            <HBox fx:id="contenedorManoJugador" alignment="CENTER" spacing="10" AnchorPane.leftAnchor="5.0" AnchorPane.topAnchor="5.0" />
                        </children>
                    </AnchorPane>
                </content>
                <VBox.margin>
                    <Insets left="10.0" right="10.0" />
                </VBox.margin>
            </ScrollPane>
        </VBox>
    </VBox>
